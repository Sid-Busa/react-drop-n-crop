{
  "name": "@synapsestudios/react-drop-n-crop",
  "version": "0.0.1",
  "description": "A combined implementation of React-Dropzone and React-Cropper",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:synapsestudios/react-drop-n-crop.git"
  },
  "dependencies": {
    "classnames": "2.2.5",
    "lodash.includes": "4.3.0",
    "react-cropper": "0.10.0",
    "react-dropzone": "3.10.0"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "@kadira/storybook-deployer": "^1.2.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "eslint": "^3.11.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "stylus": "^0.54.5"
  },
  "peerDependencies": {
    "react": "^15.0.0",
    "react-dom": "^15.0.0"
  },
  "scripts": {
    "clean": "rm -rf lib && rm -rf .out",
    "build": "npm run clean && babel src --out-dir lib && stylus src/index.styl -o lib/react-drop-n-crop.css && cp src/index.styl lib/react-drop-n-crop.styl",
    "lint": "eslint src",
    "prepublish": "npm run lint && npm run build",
    "start": "npm run start-demo",
    "start-demo": "stylus -w src/index.styl -o src/index.css & start-storybook -p 9009 -s demo",
    "build-demo": "stylus src/index.styl -o src/index.css && build-storybook -s demo -o .out",
    "deploy-demo": "npm run build && storybook-to-ghpages"
  },
  "author": "Synapse Studios",
  "license": "MIT"
}
